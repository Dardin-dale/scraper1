<div>
    <a href={{link}}>{{title}}</a>

    <button class="btn note" data-id="{{_id}}" data-toggle="#modal{{_id}}" data-target="#modal{{_id}}">View Comments</button>
    <button class="btn delete" data-id="{{_id}}">X</button>

    <p>{{summary}}</p>

    <div class="modal" id="modal{{_id}}" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title">Comments</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
            <p>{{title}}</p>
            <hr>
            <div style="height:200px;overflow:auto;">
                {{#each comments}}
                    <p>{{user}}: {{body}}</p>
                    <button class="btn delcomment" data-id="{{_id}}">X</button>
                {{/each}}
            </div>

            <form>
                <div class="form-group">
                    <label for="user">Username</label>
                    <input type="text" class="form-control" id="user" placeholder="Anon">
                </div>
                <div class="form-group">
                    <label for="comment">Comment</label>
                    <textarea class="form-control" id="comment" rows="3"></textarea>
                </div>
                <button type="submit" class="btn btn-primary add">Add Comment</button>
            </form>
        </div>

        </div>
    </div>
    </div>
	
</div>
<hr>